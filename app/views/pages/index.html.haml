.homepage
  .row
    .col-md-8
      = image_tag 'armley.jpg', class: 'img-responsive img-rounded'
    .col-md-4.text-center
      %h1.huge GSOH
      %h2 Great Sense of Home
  .row
    .col-md-12
      .cta.well.text-center
        %h3 Helping you find the perfect place to live in Leeds
        - if user_signed_in?
          %p
            = link_to new_answer_path, class: 'btn btn-primary btn-lg' do
              Answer questions
              %span.glyphicon.glyphicon-chevron-right
        - else
          %p
            = link_to new_user_registration_path, class: 'btn btn-primary btn-lg' do
              Sign up to get started
              %span.glyphicon.glyphicon-chevron-right
  .row
    .col-md-4
      %h2 Step 1
      %p Answer questions about your perfect neighbourhood
    .col-md-4
      %h2 Step 2
      %p See the areas of Leeds that best fit your profile
    .col-md-4
      %h2 Step 3
      %p Get the lowdown on your matches and find your dream location

