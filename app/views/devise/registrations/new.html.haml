= bootstrap_devise_error_messages!
.panel.panel-default.devise-bs
  .panel-heading
    %h4= t('.sign_up', :default => "Sign up")
  .panel-body
    #via-oauth
      = link_to 'Sign up with Facebook', user_facebook_omniauth_authorize_path, class: 'btn btn-facebook'
      = link_to 'Sign up with Twitter', user_twitter_omniauth_authorize_path, class: 'btn btn-twitter'
    #via-email
      = form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { role: "form" }) do |f|
        - if params[:answer]
          - params[:answer].each do |k,v|
            = hidden_field_tag "answer[#{k}]", v
        .form-group
          = f.label :email
          = f.email_field :email, autofocus: true, class: "form-control"
        .form-group
          = f.label :password
          %br/
          = f.password_field :password, class: "form-control"
        .form-group
          = f.label :password_confirmation
          = f.password_field :password_confirmation, class: "form-control"
        .checkbox
          = f.label :subscribe_to_mailing_list do
            = f.check_box :subscribe_to_mailing_list, checked: true
            Subscribe to mailing list
        = f.submit t('.sign_up', :default => "Sign up"), class: "btn btn-primary"
= render "devise/shared/links"
